@using YumBlazor.Utility

@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="page">
    <AuthorizeView Roles="@SD.Role_Admin">
        <div class="sidebar">
            <NavMenu />
        </div>
    </AuthorizeView>
    @*     <AuthorizeView Roles="@SD.Role_Customer">
        CUSOMER
    </AuthorizeView>
    <AuthorizeView>
        Any authorized User
    </AuthorizeView> *@

    <main>
        @if (_navBarVisible)
        {
            <NavBar></NavBar>
        }

        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
@code{
    private bool _navBarVisible=true;

    protected override async Task OnParametersSetAsync()
    {
        _navBarVisible= await ShowNavBar();
    }
    private async Task<bool> ShowNavBar()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var authenticated = user.Identity is not null && user.Identity.IsAuthenticated;
        if(!authenticated)
        {
            return true;
        }
        // Navbar should not be displayed to admin user
        if(!user.IsInRole(SD.Role_Admin))
        {
            return true;
        }
        return false;
    }
}
