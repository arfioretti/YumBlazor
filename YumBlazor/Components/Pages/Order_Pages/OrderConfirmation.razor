@page "/order/confirmation/{orderId}"

@if (IsProcessing)
{
    <div class="position-absolute w-100 h-100 d-flex flex-column align-items-center bg-white justify-content-center">
        <img src="/images/loading.gif" alt="loading" />
    </div>
}
else
{
    <div class="text-center">
        <h1 class="pt-4 text-success">Voce está a um passo do refeição</h1>
        <p>Seu pedido está confirmado</p>
        <p>Order ID: <b>@orderId</b></p>
        <hr />
        <img src="/images/lawn_leaf.jpg" width="40%" />
        <hr />
    </div>
}


@code {
    [Parameter]
    public string orderId  { get; set; }
    public bool IsProcessing { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        IsProcessing = false;
    }

}
